<% provide(:title, @artist.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="artist-info">
      <h2><%= @artist.name %></h2>
      <span><%= image_tag @artist.image.url, size:'200x200' %></span>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>アルバム一覧</h3>
    <% @posts.each do |post| %>
      <div class="post-info">
      <%= image_tag post.picture.url, size: '300x300' %>
      <audio src="<%= post.music.url %>" controls></audio>
      </div>
    <% end %>
  </div>
</div>