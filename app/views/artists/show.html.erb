<% provide(:title, @artist.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @artist %>
        <%= @artist.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @artist.posts.any? %>
      <h3>Posts (<%= @artist.posts.count %>)</h3>
      <ol class="posts">
        <% @artist.posts.each do |post| %>
          <li id="post-<%= post.id %>">
            <%= link_to gravatar_for(post.artist, size: 50), post.artist %>
            <span class="artist"><%= link_to post.artist.name, post.artist %></span>
            <span class="content"><%= post.content %></span>
            <span class="timestamp">
              Posted <%= time_ago_in_words(post.created_at ) %> ago.
              <% if current_user?(post.artist) %>
                <%= link_to "delete", post, method: :delete,
                                      data: { confirm: "You sure?" } %>
              <% end %>
            </span>
          </li>
        <% end %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>